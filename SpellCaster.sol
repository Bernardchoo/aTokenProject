pragma solidity >0.5.16;
pragma experimental ABIEncoderV2;



contract SpellCaster is ReentrancyGuard {
    bytes4 private constant _TRANSFER_WITH_AUTHORIZATION_SELECTOR = 0xe3ee160e;

    IERC20 private _token;

    constructor(IERC20 token) public {
        _token = token;
    }

    // Used the signed transaction to call deposit. with ( to , this address )
    function multiSend(
        bytes calldata transferAuthorization,
        address[] calldata receivers,
        uint256[] calldata amounts
    ) external nonReentrant {
        // GET from, to , amount from calldata.
        (address from, address to, uint256 amount) = abi.decode(
            transferAuthorization[0:96],
            (address, address, uint256)
        );
        // Check to address is address.
        require(to == address(this), "Recipient is not this contract");
        // transfer to this contract.
        (bool success, ) = address(_token).call(
            abi.encodePacked(
                _TRANSFER_WITH_AUTHORIZATION_SELECTOR,
                transferAuthorization
            )
        );
        require(receivers.length == amounts.length);
        for (uint256 i; i < receivers.length; i++) {
            _token.transfer(receivers[i], amounts[i]);
        }

        uint256 remainder = _token.balanceOf(address(this));
        if (remainder > 0) {
            require(
                _token.transfer(from, remainder),
                "Failed to refund the remainder"
            );
        }
    }
}